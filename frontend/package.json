{
  "name": "cards-frontend",
  "version": "0.1.0",
  "private": true,
  "description": "a digital card deck (frontend)",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "vue": {
    "devServer": {
      "proxy": {
        "^/ws": {
          "target": "http://localhost:8000",
          "ws": true,
          "secure": false
        }
      }
    }
  },
  "babel": {
    "presets": [
      [
        "@vue/cli-plugin-babel/preset"
      ]
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "dependencies": {
    "vue": "^2.6.11",
    "vue-router": "^3.1.5",
    "vue-socket.io": "^3.0.7",
    "vuedraggable": "^2.23.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.2.0",
    "@vue/cli-plugin-eslint": "~4.2.0",
    "@vue/cli-plugin-router": "~4.2.0",
    "@vue/cli-service": "~4.2.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.1.2",
    "vue-template-compiler": "^2.6.11"
  }
}
